@model UpdateBannerDto

@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Banner Güncelleme</h4>
                        <p class="card-subtitle mb-4">Banner ile ilgili girişi yapabilirsiniz. 1 tane banner verisi olmalıdır.</p>

                        <form method="post">
                            <input type="hidden" asp-for="BannerID" />

                            <div class="form-group">
                                <label for="exampleInputTitle">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Başlık girişi yapınız.">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklamayı Giriniz</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Kapak Fotoğrafı linkini girişi yapınız.">
                            </div>

                            <div class="form-group">
                                <label for="exampleVideoDescription">Video Açıklama</label>
                                <input type="text" class="form-control" id="exampleVideoDescription" asp-for="VideoDescription" placeholder="Video Açıklama Bilgisi giriniz.">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputVideoUrl">Vites Url</label>
                                <input type="text" class="form-control" id="exampleInputVideoUrl" asp-for="VideoUrl" placeholder="Youtube Embed bilgisi giriniz.">
                            </div>


                            <button type="submit" class="btn btn-success waves-effect waves-light">Banner Güncelle</button>
                        </form>

                    </div> <!-- end card-body-->
                </div> <!-- end card-->

            </div>
            <!-- end card-body-->
        </div>
        <!-- end card -->

    </div>
    <!-- end col -->

</div>
<!-- end page title -->
